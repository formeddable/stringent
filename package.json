{
  "name": "stringent",
  "version": "1.0.0-beta",
  "description": "A smart and type-safe expression parser",
  "keywords": [
    "parser",
    "expression",
    "typescript",
    "type-safe",
    "compile-time",
    "type-level",
    "expression-parser",
    "dsl",
    "ast",
    "grammar",
    "validation",
    "inference"
  ],
  "homepage": "https://github.com/formeddable/stringent#readme",
  "bugs": {
    "url": "https://github.com/formeddable/stringent/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/formeddable/stringent.git"
  },
  "license": "MIT",
  "author": "Essam Almansouri",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"examples/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@sinclair/parsebox": "^0.11.1",
    "arktype": "^2.1.29"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "hotscript": "^1.0.13",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  }
}